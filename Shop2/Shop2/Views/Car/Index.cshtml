@model IEnumerable<Shop2.Models.Car.CarListViewModel>

@{
    int queueNumber = 0;
}
<div>
    <a asp-action="add" asp-controller="car" type="submit" class="btn btn-danger">Add</a>
</div>

<form method="post">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Nr</th>
                <th scope="col">Make</th>
                <th scope="col">Model</th>
                <th scope="col">Bodytype</th>
                <th scope="col">Year</th>
                <th scope="col">Power</th>
                <th scope="col">Mileage</th>
                <th scope="col">Fuel</th>
                <th scope="col">Transmission</th>
                <th scope="col">Drivetrain</th>
                <th scope="col">Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var car in Model)
            {
                queueNumber++;

            <tr>
                <td class="">@queueNumber</td>
                <td class="">@car.Make</td>
                <td class="">@car.Model</td>
                <td class="">@car.Bodytype</td>
                <td class="">@car.Year</td>
                <td class="">@car.Power</td>
                <td class="">@car.Mileage</td>
                <td class="">@car.Fuel</td>
                <td class="">@car.Transmission</td>
                <td class="">@car.Drivetrain</td>
                <td class="">@car.Price</td>

                <td>
                    <a asp-action="edit" asp-controller="car" asp-route-id="@car.Id" class="btn btn-primary">Edit</a>
                    <input asp-action="delete" asp-controller="car" asp-route-id="@car.Id" type="submit" class="btn btn-danger" value="Delete">
                </td>
            </tr>
            }
        </tbody>
    </table>
</form>